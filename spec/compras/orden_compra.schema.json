{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrdenCompra",
  "type": "object",
  "required": ["numero_orden", "obra_id", "proveedor_id", "fecha_entrega", "estado", "items"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "numero_orden": { "type": "string" },
    "obra_id": { "type": "string", "format": "uuid" },
    "proveedor_id": { "type": "string", "format": "uuid" },
    "requisicion_id": { "type": ["string", "null"], "format": "uuid" },
    "comprador_nombre": { "type": ["string", "null"] },
    "fecha_emision": { "type": "string", "format": "date-time" },
    "fecha_entrega": { "type": "string", "format": "date" },
    "estado": {
      "type": "string",
      "enum": ["borrador", "emitida", "recibida", "facturada", "pagada", "cancelada"]
    },
    "tipo_entrega": { "type": ["string", "null"] },
    "has_iva": { "type": "boolean" },
    "descuento": { "type": "number", "minimum": 0 },
    "descuento_monto": { "type": "number", "minimum": 0 },
    "subtotal": { "type": "number", "minimum": 0 },
    "iva": { "type": "number", "minimum": 0 },
    "total": { "type": "number", "minimum": 0 },
    "observaciones": { "type": ["string", "null"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["descripcion", "cantidad", "unidad", "precio_unitario", "total"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "descripcion": { "type": "string" },
          "cantidad": { "type": "number", "minimum": 0 },
          "unidad": { "type": "string" },
          "precio_unitario": { "type": "number", "minimum": 0 },
          "total": { "type": "number", "minimum": 0 }
        }
      }
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
