{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Obra",
  "type": "object",
  "required": [
    "codigo",
    "nombre",
    "numero_contrato",
    "cliente",
    "residente",
    "monto_contratado",
    "fecha_inicio",
    "fecha_fin_programada",
    "plazo_ejecucion",
    "estado"
  ],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "codigo": { "type": "string" },
    "nombre": { "type": "string" },
    "numero_contrato": { "type": "string" },
    "cliente": { "type": "string" },
    "residente": { "type": "string" },
    "residente_iniciales": { "type": ["string", "null"] },
    "direccion": { "type": ["string", "null"] },
    "monto_contratado": { "type": "number", "minimum": 0 },
    "anticipo_porcentaje": { "type": "number", "minimum": 0 },
    "retencion_porcentaje": { "type": "number", "minimum": 0 },
    "saldo_actual": { "type": "number", "minimum": 0 },
    "total_estimaciones": { "type": "number", "minimum": 0 },
    "total_gastos": { "type": "number", "minimum": 0 },
    "avance_fisico_porcentaje": { "type": "number", "minimum": 0 },
    "fecha_inicio": { "type": "string", "format": "date" },
    "fecha_fin_programada": { "type": "string", "format": "date" },
    "plazo_ejecucion": { "type": "integer", "minimum": 0 },
    "estado": {
      "type": "string",
      "enum": ["activa", "suspendida", "terminada", "cancelada"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
